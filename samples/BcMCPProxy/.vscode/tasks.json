{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "process",
            "args": [
                "build",
                "${workspaceFolder}/BcMCPProxy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/BcMCPProxy.csproj",
                "/property:GenerateFullPaths=true",
                "/consoleloggerparameters:NoSummary"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "watch",
            "command": "dotnet",
            "type": "process",
            "args": [
                "watch",
                "run",
                "--project",
                "${workspaceFolder}/BcMCPProxy.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "publish-win-arm64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/BcMCPProxy.csproj",
                "-c",
                "Release",
                "-r",
                "win-arm64",
                "--self-contained",
                "true",
                "-p:PublishSingleFile=true",
                "-o",
                "${workspaceFolder}/publish/win-arm64"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "publish-win-x64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/BcMCPProxy.csproj",
                "-c",
                "Release",
                "-r",
                "win-x64",
                "--self-contained",
                "true",
                "-p:PublishSingleFile=true",
                "-o",
                "${workspaceFolder}/publish/win-x64"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "publish-linux-x64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/BcMCPProxy.csproj",
                "-c",
                "Release",
                "-r",
                "linux-x64",
                "--self-contained",
                "true",
                "-p:PublishSingleFile=true",
                "-o",
                "${workspaceFolder}/publish/linux-x64"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "publish-linux-arm64",
            "command": "dotnet",
            "type": "process",
            "args": [
                "publish",
                "${workspaceFolder}/BcMCPProxy.csproj",
                "-c",
                "Release",
                "-r",
                "linux-arm64",
                "--self-contained",
                "true",
                "-p:PublishSingleFile=true",
                "-o",
                "${workspaceFolder}/publish/linux-arm64"
            ],
            "problemMatcher": "$msCompile",
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}